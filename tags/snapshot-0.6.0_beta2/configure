#/bin/bash

echo "NOTE: This is not proper configure script. It is just a helper script"
echo "for cmake."
echo ""

if [ "$1" != "" ]; then
  echo "Cannot handle any parameters."
  exit 1
fi

if [ -d build ]; then
  rm build/* -fR
else
  mkdir build
fi

cd build

KDE4_PREFIX=`kde4-config --prefix`
if [ "$KDE4_PREFIX" == "" ]; then   # We don't handle any parameters
  echo "Cannot find KDE4."
  exit 1
fi

echo "running cmake..."

cmake -DCMAKE_INSTALL_PREFIX="$KDE4_PREFIX" ..

echo ""
echo "OK you can run make now. (cd build; make)"
